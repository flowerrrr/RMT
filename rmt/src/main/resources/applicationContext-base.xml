<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <!-- this bean allows non spring beans to access the application context. -->
    <bean id="springApplicationContextBridge" factory-method="getInstance"
    	class="de.flower.common.spring.SpringApplicationContextBridge" />

    <!--  ignore-resource-not-found="true" is set, cause credentials.properties is not checked in and thus not available in jenkins builds -->
    <context:property-placeholder
            ignore-resource-not-found="true"
            location="classpath:application.properties,classpath:application.target.properties,classpath:credentials.properties"/>

</beans>